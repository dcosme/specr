    textVersion =
  	paste("Masur, Philipp K. & Scharkow, M. (2020). specr: Conducting and Visualizing Specification Curve Analyses.",
		"Available from https://CRAN.R-project.org/package=specr."
		),
	mheader = "To cite 'specr' in publications use:"
)
